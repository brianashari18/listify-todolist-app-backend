      "patch": {
        "tags": ["User"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "summary": "Update User",
        "parameters": [
          { "$ref": "#/components/parameters/BearerAuthorizationHeader"}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserUpdateRequest"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
